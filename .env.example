# PersonaAgent Factory Environment Configuration
# .envファイルとしてコピーして使用してください

# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API設定
CLAUDE_API_KEY=your_claude_api_key_here

# Google Gemini API設定
GEMINI_API_KEY=your_gemini_api_key_here

# Google Sheets API設定（オプション）
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://mokumoku.sakura.ne.jp/persona-factory/auth/google/callback

# アプリケーション設定
APP_URL=https://mokumoku.sakura.ne.jp/persona-factory/

# データベース設定（将来の拡張用）
# DB_HOST=localhost
# DB_NAME=personaagent_factory
# DB_USER=root
# DB_PASS=

# セッション設定
SESSION_TIMEOUT=3600

# デバッグモード（本番環境では false に設定）
DEBUG_MODE=true